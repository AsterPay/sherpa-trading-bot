# ============================================
# TRADING AGENT CONFIGURATION
# ============================================
# Copy this to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# STRATEGY ENABLEMENT
# ============================================
POLYMARKET_ENABLED=true
SPY_ENABLED=true
TOKEN_LAUNCH_ENABLED=true

# ============================================
# CAPITAL ALLOCATION (EUR)
# ============================================
POLYMARKET_CAPITAL=200
SPY_CAPITAL=200
TOKEN_CAPITAL=200

# ============================================
# RISK MANAGEMENT
# ============================================
MAX_POSITION_SIZE_USD=50
MAX_DAILY_LOSS_EUR=50
MAX_TRADES_PER_DAY=10
MIN_CONFIDENCE=high

# ============================================
# EXECUTION
# ============================================
AUTO_EXECUTE=false
SCAN_INTERVAL_MS=60000
SPY_SQUEEZE_TIME=15:50

# ============================================
# POLYMARKET (200 EUR)
# ============================================
POLYMARKET_API_KEY=
POLYGON_PRIVATE_KEY=0x...
POLYGON_RPC=https://polygon-rpc.com
# Or use Alchemy: https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# ============================================
# ALPACA / SPY (200 EUR)
# ============================================
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_PAPER=false
ALPACA_API_BASE=https://api.alpaca.markets
ALPACA_DATA_BASE=https://data.alpaca.markets

# ============================================
# BASE / TOKEN LAUNCHES (200 EUR)
# ============================================
BASE_PRIVATE_KEY=0x...
BASE_RPC=https://mainnet.base.org
# Or use Alchemy: https://base-mainnet.g.alchemy.com/v2/YOUR_KEY
ZEROX_API_KEY=
# Get free key: https://dashboard.0x.org/

# ============================================
# TELEGRAM ALERTS (Recommended)
# ============================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================
# DATABASE & LOGGING
# ============================================
DB_PATH=./data/trading.json
LOG_FILE=./logs/trading-agent.log
STOP_FILE=./data/stop_trading.flag

# ============================================
# MOLTBOOK (Optional - for research)
# ============================================
MOLTBOOK_API_KEY=
